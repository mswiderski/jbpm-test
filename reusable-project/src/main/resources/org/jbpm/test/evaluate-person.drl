package org.jbpm.test;

import org.jbpm.test.Person;

rule MarkAsAdult
  ruleflow-group "person-rules"
  when
	$p : Person(age >= 21)
  then
	modify($p) {
		setAdult(true);
	}
end

rule MarkAsTeenager
  ruleflow-group "person-rules"
  when
	$p : Person(age < 21)
  then
	modify($p) {
		setAdult(false);
	}
end